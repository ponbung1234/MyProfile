<!-- Page Content -->
<div class="container post-container">

    <!-- Portfolio Item Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><%= @post.title %>
                <small>Item Subheading</small>
            </h1>
        </div>
    </div>
    <!-- /.row -->

    <!-- Portfolio Item Row -->
    <div class="row">

        <div class="col-md-7">
            <%= image_tag @post.image.url, class: 'img-responsive' %>

            <%= @post.imageurl %>
        </div>

        <div class="col-md-5">
            <div class="row" style="padding-left: 10px">
                <h3>Project Description</h3>
            </div>
            <div class="row" style="padding-left: 10px">
                <p>&emsp;&emsp;<%= @post.body %></p>
            </div>
            
            <div class="row ">
                <div class="col-lg-12 text-center">
                    
                    <a href="<%= @post.url %>" target="_blank">
                    <button type="button" class="btn btn-primary">VIEW SITE!</button></a>
                    </a> 

                     <a href="https://thanapon-profile.herokuapp.com/">
                    <button type="button" class="btn btn-primary">BACK!</button></a>
                    </a> 
                </div>
                
            </div>
        </div>

    </div>
    <!-- /.row -->

    <!-- Related Projects Row -->
    <div class="row">

        <div class="col-lg-12">
            <h3 class="page-header">Related Projects</h3>
        </div>

        <% @posts.each do |post| %>
            <div class="col-sm-3 col-xs-6">
                <%= link_to post_path(post) do %>
                  <%= image_tag post.image.url, class: 'img-responsive portfolio-item' %>
                  
                <% end %>
            </div>
        <% end %>

    </div>
    <!-- /.row -->
</div>